# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# Database Configuration (PostgreSQL)
# For local development: postgresql://user:password@localhost:5432/ecs_db
# For Supabase: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecs_db

# MQTT Broker Configuration
MQTT_BROKER=broker.hivemq.com
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=ecs_backend_client

# MQTT Topics
MQTT_TOPIC_UPLOAD=ecs/upload
MQTT_TOPIC_CONTROL=ecs/control
MQTT_TOPIC_STATUS=ecs/status
